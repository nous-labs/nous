{
  "name": "@nouslabs/core",
  "version": "1.0.1",
  "description": "Core utilities for Qubic blockchain development",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./encoding": {
      "import": "./dist/encoding.js",
      "types": "./dist/encoding.d.ts"
    },
    "./validation": {
      "import": "./dist/validation.js",
      "types": "./dist/validation.d.ts"
    },
    "./types": {
      "import": "./dist/types.js",
      "types": "./dist/types.d.ts"
    },
    "./identity": {
      "import": "./dist/identity.js",
      "types": "./dist/identity.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "qubic",
    "blockchain",
    "utilities",
    "encoding",
    "validation",
    "core"
  ],
  "author": "Nous Labs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nous-labs/sdk.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/nous-labs/sdk/issues"
  },
  "homepage": "https://nous-labs.com",
  "dependencies": {
    "@noble/hashes": "^1.4.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
