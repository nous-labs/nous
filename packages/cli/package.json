{
    "name": "@nouslabs/cli",
    "version": "0.1.3",
    "description": "Command-line tools for Qubic blockchain",
    "main": "./dist/cli.js",
    "module": "./dist/cli.js",
    "type": "module",
    "bin": {
        "nous": "./dist/cli.js"
    },
    "files": [
        "dist",
        "templates",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "build": "bun build ./src/cli.ts --outdir ./dist --target node --format esm",
        "dev": "bun run ./src/cli.ts",
        "typecheck": "tsc --noEmit",
        "lint": "tsc --noEmit"
    },
    "keywords": [
        "qubic",
        "blockchain",
        "cli",
        "command-line",
        "developer-tools"
    ],
    "author": "Nous Labs",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/nous-labs/sdk.git",
        "directory": "packages/cli"
    },
    "bugs": {
        "url": "https://github.com/nous-labs/sdk/issues"
    },
    "homepage": "https://nous-labs.com",
    "dependencies": {
        "@noble/ed25519": "^3.0.0",
        "@noble/hashes": "1.7.0",
        "@nouslabs/sdk": "1.5.2",
        "@types/inquirer": "^9.0.9",
        "asciichart": "^1.5.25",
        "chalk": "^5.3.0",
        "commander": "^12.0.0",
        "conf": "^12.0.0",
        "inquirer": "^9.2.15",
        "ora": "^8.0.1",
        "string-argv": "^0.3.2"
    },
    "devDependencies": {
        "@types/node": "^20.11.0",
        "typescript": "^5.9.3"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org/"
    }
