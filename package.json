{
  "name": "nous-labs",
  "version": "0.0.0",
  "private": true,
  "description": "Developer tools for Qubic blockchain - monorepo",
  "workspaces": [
    "packages/*",
    "docs"
  ],
  "scripts": {
    "build": "bun run --filter './packages/*' build",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "typecheck": "bun run --filter './packages/*' typecheck",
    "lint": "bun run --filter './packages/*' lint",
    "dev": "bun run --filter @nouslabs/sdk dev",
    "clean": "rm -rf packages/*/dist packages/*/node_modules node_modules",
    "scaffold:next": "node scripts/scaffold-nextjs.cjs",
    "publish": "node ./publish-all-packages.mjs"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nous-labs/sdk.git"
  },
  "author": "Nous Labs",
  "license": "MIT",
  "dependencies": {
    "@noble/ed25519": "^3.0.0",
    "@noble/hashes": "^2.0.1"
  }
}