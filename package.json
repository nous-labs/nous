{
  "name": "@navia-labs/qts",
  "version": "0.0.0-development",
  "description": "TypeScript SDK for Qubic blockchain - Complete integration library for frontend and backend applications",
  "main": "./index.ts",
  "module": "./index.ts",
  "types": "./index.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./index.ts",
      "types": "./index.ts"
    },
    "./clients": {
      "import": "./src/clients/index.ts",
      "types": "./src/clients/index.ts"
    },
    "./types": {
      "import": "./src/types/index.ts",
      "types": "./src/types/index.ts"
    },
    "./utils": {
      "import": "./src/utils/index.ts",
      "types": "./src/utils/index.ts"
    }
  },
  "files": [
    "src",
    "index.ts",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "build": "bun build ./index.ts --outdir ./dist --target node",
    "dev": "bun run index.ts",
    "typecheck": "tsc --noEmit",
    "lint": "tsc --noEmit",
    "prepare": "node -e \"try { require('husky').install() } catch (e) {if (e.code !== 'MODULE_NOT_FOUND') throw e}\"",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "qubic",
    "blockchain",
    "crypto",
    "smart-contracts",
    "typescript",
    "sdk",
    "api",
    "web3",
    "dlt",
    "distributed-ledger",
    "navia",
    "navia-labs"
  ],
  "author": "Navia Labs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/navia-labs/qts.git"
  },
  "bugs": {
    "url": "https://github.com/navia-labs/qts/issues"
  },
  "homepage": "https://github.com/navia-labs/qts#readme",
  "dependencies": {
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.6",
    "@semantic-release/npm": "^11.0.2",
    "@semantic-release/release-notes-generator": "^12.1.0",
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "husky": "^8.0.3",
    "semantic-release": "^23.0.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "release": {
    "branches": [
      "main",
      {
        "name": "beta",
        "prerelease": true
      }
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "type": "feat",
              "release": "minor"
            },
            {
              "type": "fix",
              "release": "patch"
            },
            {
              "type": "perf",
              "release": "patch"
            },
            {
              "type": "refactor",
              "release": "patch"
            },
            {
              "type": "docs",
              "release": "patch"
            },
            {
              "breaking": true,
              "release": "major"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "perf",
                "section": "Performance Improvements"
              },
              {
                "type": "refactor",
                "section": "Code Refactoring"
              },
              {
                "type": "docs",
                "section": "Documentation"
              },
              {
                "type": "style",
                "section": "Styles",
                "hidden": false
              },
              {
                "type": "chore",
                "section": "Miscellaneous Chores",
                "hidden": true
              },
              {
                "type": "test",
                "section": "Tests",
                "hidden": true
              }
            ]
          }
        }
      ],
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "CHANGELOG.md"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ]
  }
}
